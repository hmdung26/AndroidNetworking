<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="25dp"
    android:layout_margin="15dp"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#E2BCB7"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgSanPhamADM"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"

            android:layout_width="120dp"
            android:layout_height="150dp"/>


        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTenSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/idGiaSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/idMoTaSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/idSoLuongSanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#E2BCB7"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FFEFE0"
                android:text="Sửa"
                android:textColor="#4E352F"
                android:textSize="22sp"
                android:textStyle="normal"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnXoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFEFE0"
                android:text="Xóa"
                android:textColor="#4E352F"
                android:textSize="22sp"
                android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>